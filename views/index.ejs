<div class="author">
    <h1 class="author__heading">Hi, I'm Ere</h1>
    <p class="author__body">
        fullstack developer and struggling with ts shitlife
    </p>
</div>
<img src="/images/hero-image.webp" class="hero-image" alt="" width="981" height="528">

<section class="article">
    <h2 class="article__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(e => { %>

            <li>
                <a href="/post/<%= e._id %>">
                    <span> <%= e.title %></span>
                    <span class="article-list__date"><%= e.createdAt.toDateString() %></span>
                </a>
            </li>
            <% }) %>
        </ul>
        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
        <% } %>
</section>